<section class="foods-layout">
  <%= button_to "Add food", new_food_path, method: :get, class: 'btn btn-success' %>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Food</th>
        <th scope="col">Measurement unit</th>
        <th scope="col">Unit price</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if @foods %>
        <% @foods.each do |f| %>
          <tr>
            <th scope="row"><%= f.name %></th>
            <td><%= f.measurement_unit %></td>
            <td><%= f.price %></td>
            <td><%= button_to "Delete", f, method: 'delete',  class: 'btn btn-danger' %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</section>
