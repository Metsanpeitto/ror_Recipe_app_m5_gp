<h2>Add new food item</h2>
<% if @food %>
  <%= form_with model: @food do |f| %>
    <div class="mb-3">
      <label for="form_food_name" class="form-label">Name</label>
      <%= f.text_field :name, :required => true %>
    </div>
    <div class="mb-3">
      <label for="form_food_measurement_unit" class="form-label">Measurement unit</label>
      <%= f.text_field :measurement_unit, :required => true %>
    </div>
    <!-- Example single danger button -->
    <select name="mmeasurement_unit" id="measurement_unit" class="mb-3">
      <option value="1" selected="selected">grams</option>
      <option value="2">kilograms</option>
    </select>
    <%= f.select(:location_id, grouped_options_for_select(Location.all.map{|l| [l.name, l.category_name, l.id]}.group_by { |c| c[1] }), {include_blank: "Select one..."}, {:class => 'grouped_select',id:"location_grouped"}) %>
    <div class="mb-3">
      <label for="form_food_price" class="form-label">Price</label>
      <%= f.number_field :price, :required => true %>
    </div>
    <%= f.submit 'Create', class: 'btn btn-primary' %>
  <% end %>
<% end %>
